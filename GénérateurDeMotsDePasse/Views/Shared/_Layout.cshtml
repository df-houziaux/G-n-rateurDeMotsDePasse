<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Générateur de Mots de Passe</title>

    <!-- Inclusion des styles CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <!-- FontAwesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<body>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm custom-navbar sticky-top border-bottom shadow mb-3">
            <div class="container-fluid">
              

                <!-- Bouton pour mobile -->
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Liens de navigation -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenu Principal -->
    <div class="container">
        <main role="main" class="pb-3 content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="col-md-4">
                <img src="~/images/LogoProfessionnel1.jpg" alt="Logo Houziaux David" class="logo-footer">
            </div>
            <div class="col-md-4">
                <p>&copy; 2025 - Houziaux David | Développement & Création Web</p>
                <p>Propulsé par passion & innovation 🚀</p>
            </div>
            <div class="col-md-4">
                <div class="contact-info">
                    <p>📧 <a href="mailto:df.houziaux@gmail.com">df.houziaux@gmail.com</a></p>
                    <p>📍 Basé en France</p>
                </div>
                <div class="social-links">
                    <a href="https://www.linkedin.com/in/david-houziaux-a6a33a298/" target="_blank" class="social-icon linkedin">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/8/81/LinkedIn_icon.svg" alt="LinkedIn">
                    </a>
                    <a href="https://github.com/df-houziaux" target="_blank" class="social-icon github">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/9/91/Octicons-mark-github.svg" alt="GitHub" style="filter: invert(1);">
                    </a>
                </div>
                <div class="contact-button">
                    <a href="@Url.Action("Contact", "Home")" class="btn-contact">Me Contacter</a>
                </div>

            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
